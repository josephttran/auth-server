{
  "name": "auth-server",
  "version": "0.0.1",
  "description": "Backend for authentication and authorization",
  "main": "server.js",
  "scripts": {
    "start": "node ./src/server.js",
    "dev": "nodemon --ext ts --exec ts-node ./src/server/server.ts",
    "test": "jest"
  },
  "keywords": [
    "authentication",
    "authorization"
  ],
  "author": "josephttran",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "dotenv": "^6.2.0",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.0.0",
    "koa-jwt": "^3.5.1",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "mysql2": "^1.6.5"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.1",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.39",
    "@types/koa__cors": "^2.2.3",
    "@types/mysql2": "github:types/mysql2",
    "chalk": "^2.4.2",
    "jest": "^24.1.0",
    "nodemon": "^1.18.9",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "testRegex": "/tests/[^\\/]*\\.(test|spec)\\.ts",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
